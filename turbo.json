{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "inputs": ["**/*.ts"],
            "outputs": ["**/*.js"]
        },
        "test": {
            "dependsOn": ["build"],
            "cache": false
        },
        "lint": {
            "inputs": ["**/*.ts"]
        }
    }
}
